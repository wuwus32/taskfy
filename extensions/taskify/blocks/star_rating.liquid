        this.addEventListener('loadend', function() {
          try {
            if (isCartUrlLike(this.__taskifyUrl)) {
              scheduleVisibilityRecheck(50);
            }
          } catch (e) {}
        });
      } catch (e) {}
      return origSend.apply(this, arguments);
    };
  })();

  // Listen to common theme events
